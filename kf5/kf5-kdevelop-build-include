# minimal module definitions for building KDevelop for KDE Frameworks 5
#
# this tries to build only the bare minimum of KF5 required to get
# kdevelop up and running
#
# NOTE: currently, this is probably still building a bit too much.
#

# Usage: Write your own kdesrc-buildrc with only a "global" section
# then include this file

module-set
    repository kde-projects
    use-modules kdesrc-build extra-cmake-modules polkit-qt-1
    # Optionally: add polkit-qt-1
end module-set

module-set akonadi
    repository kde-projects
    cmake-options -DQT5_BUILD=TRUE
    use-modules akonadi
end module-set

module-set frameworks
    repository kde-projects
    use-modules frameworks
end module

module-set kf5-base-applications
    repository kde-projects # Required by branch-group
    use-modules konsole kate kdiagram dolphin
end module-set

module-set kf5-base-workspace
    repository kde-projects # Required by branch-group
    use-modules khelpcenter kio-extras kdecoration breeze
end module-set

module-set kdevelop-kf5
    repository kde-projects
    use-modules kdevplatform kdevelop/kdevelop kdevelop-pg-qt kdev-php kdev-php-docs kdev-qmljs kdev-clang kdev-qmake kdev-css
end module-set

options bluez-qt
    # Default udev rules dir /lib/udev/rules.d is not writable by regular user
    cmake-options -DINSTALL_UDEV_RULE:BOOL=OFF
end options

module-set massif-visualizer
    repository kde-projects
    branch frameworks
    use-modules massif-visualizer
end module

########## kdepim stuff

module-set kf5-prison
    repository kde-projects
    use-modules prison
end module-set

module-set kdepimlibs
    repository kde-projects
    use-modules kdepimlibs
end module-set

# The PIM Baloo code is now in akonadi-search
module-set akonadi-search
    repository kde-projects
    use-modules akonadi-search
end module-set

module-set libkgapi
    repository kde-projects
    use-modules libkgapi
end module

module-set kdepim
    repository kde-projects
    use-modules kde/pim kde/kdepim
end module-set

module-set kdepim-runtime
    repository kde-projects
    use-modules kdepim-runtime
end module-set
